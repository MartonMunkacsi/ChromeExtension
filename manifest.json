{
  "name": "Fake News Detection",
  "version": "1.0",
  "description": "You no longer have to worry about what is real and what is fake!",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup-scripts/popup.html",
    "default_icon": "images/logo.png"
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net https://code.jquery.com; object-src 'self'"
}
